@* Views/Shared/_AdminLayout.cshtml *@
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Quản trị</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <style>
        body {
            margin: 0;
            overflow-x: hidden;
        }

        .sidebar {
            background-color: #212529;
            min-height: 100vh;
            padding-top: 1rem;
        }

            .sidebar h5 {
                color: #fff;
                padding-left: 1rem;
                margin-bottom: 2rem;
            }

            .sidebar a {
                color: #adb5bd;
                display: block;
                padding: 12px 20px;
                text-decoration: none;
                transition: all 0.2s ease;
            }

                .sidebar a:hover,
                .sidebar a.active {
                    background-color: #343a40;
                    color: #fff;
                    font-weight: bold;
                }

                .sidebar a i {
                    margin-right: 8px;
                }

        .main-content {
            padding: 2rem;
            background-color: #f8f9fa;
            min-height: 100vh;
        }

        .btn-return {
            margin-top: auto;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block sidebar">
                <div class="d-flex flex-column h-100">
                    <div>
                        <h5>Quản trị</h5>
                        <a asp-controller="Admin" asp-action="Index"><i class="fas fa-chart-line"></i> Tổng quan</a>
                        <a asp-controller="Admin" asp-action="Categories"><i class="fas fa-list"></i> Danh mục</a>
                        <a asp-controller="Admin" asp-action="Banner"><i class="fas fa-image"></i> Banner</a>
                        <a asp-controller="Admin" asp-action="Products"><i class="fas fa-box-open"></i> Sản phẩm</a>
                        <a asp-controller="Admin" asp-action="Orders"><i class="fas fa-receipt"></i> Đơn hàng</a>
                        <a asp-controller="Admin" asp-action="Users"><i class="fas fa-users"></i> Người dùng</a>
                        <a asp-controller="Admin" asp-action="ContactMessages"><i class="fas fa-envelope"></i> Liên hệ</a>
                        <a asp-controller="Admin" asp-action="ReviewSummary"><i class="fas fa-star"></i> Đánh giá</a>
                    </div>

                    <div class="mt-auto px-3 pb-3">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-light w-100">
                            <i class="fas fa-arrow-left"></i> Về trang chủ
                        </a>
                    </div>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="col-md-9 col-lg-10 main-content">
                @RenderBody()
            </main>
        </div>
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>
