@{
    ViewData["Title"] = "Đã gửi liên hệ";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container text-center py-5 success-contact-page">
    <!-- Icon tick -->
    <div class="icon-check mb-3">
        <i class="bi bi-check-circle-fill"></i>
    </div>

    <h1 class="fw-bold">@ViewData["Title"]</h1>
    <p class="mt-3">Cảm ơn vì lời nhắn của bạn. Chúng tôi sẽ liên hệ lại với bạn sớm nhất có thể.</p>

    <a asp-controller="Home" asp-action="Index" class="btn btn-continue">Tiếp tục mua sắm</a>
</div>

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .success-contact-page {
            padding-top: 80px;
            padding-bottom: 80px;
        }

        .icon-check i {
            font-size: 4rem;
            color: #A4D562;
        }

        .btn-continue {
            background-color: #A4D562;
            color: #fff;
            border: none;
            border-radius: 8px;
            padding: 12px 30px;
            font-size: 1.1rem;
            font-weight: 500;
            transition: background-color 0.3s ease-in-out;
        }

        .btn-continue:focus {
            outline: none;
            box-shadow: none;
        }

            .btn-continue:hover {
                background-color: #89C752;
                color: #fff;
            }

    </style>
}
