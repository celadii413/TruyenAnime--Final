@model TruyenAnime.Models.Product
@{
    ViewData["Title"] = "Thêm Sản phẩm mới";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container mt-5">
    <h2 class="mb-4">@ViewData["Title"]</h2>
    <div class="row">
        <div class="col-md-7">
            <form asp-action="CreateProduct" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Tên sản phẩm</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Author" class="form-label">Tác giả</label>
                    <input asp-for="Author" class="form-control" />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Mô tả</label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="row mb-3">
                    <div class="col">
                        <label asp-for="Price" class="form-label">Giá</label>
                        <input asp-for="Price" type="number" class="form-control" step="0.01" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <label asp-for="Stock" class="form-label">Tồn kho</label>
                        <input asp-for="Stock" type="number" class="form-control" />
                        <span asp-validation-for="Stock" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="ImageUrl" class="form-label">Ảnh</label>
                    <input asp-for="ImageUrl" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="CategoryId" class="form-label">Thể loại</label>
                    <select asp-for="CategoryId" class="form-select" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))">
                        <option value="">-- Chọn thể loại --</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="row mb-3">
                    <div class="col">
                        <label asp-for="PublishYear" class="form-label">Năm XB</label>
                        <input asp-for="PublishYear" class="form-control" />
                        <span asp-validation-for="PublishYear" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <label asp-for="Publisher" class="form-label">NXB</label>
                        <input asp-for="Publisher" class="form-control" />
                        <span asp-validation-for="Publisher" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Size" class="form-label">Kích thước</label>
                    <input asp-for="Size" class="form-control" />
                    <span asp-validation-for="Size" class="text-danger"></span>
                </div>

                <div class="form-check mb-2">
                    <input asp-for="IsNewArrival" class="form-check-input" type="checkbox" />
                    <label asp-for="IsNewArrival" class="form-check-label">Hàng mới</label>
                </div>
                <div class="form-check mb-2">
                    <input asp-for="IsBestSeller" class="form-check-input" type="checkbox" />
                    <label asp-for="IsBestSeller" class="form-check-label">Bán chạy</label>
                </div>
                <div class="form-check mb-4">
                    <input asp-for="IsHotDeal" class="form-check-input" type="checkbox" />
                    <label asp-for="IsHotDeal" class="form-check-label">Hot Deal</label>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Products" class="btn btn-outline-secondary">← Quay lại</a>
                    <button type="submit" class="btn btn-primary">Tạo mới</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}