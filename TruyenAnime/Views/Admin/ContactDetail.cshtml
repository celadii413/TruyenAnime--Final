@model TruyenAnime.Models.ContactMessage
@{
    ViewData["Title"] = "Chi tiết Liên hệ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container mt-5">
    <h2 class="mb-4">@ViewData["Title"]</h2>
    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title">@Model.Name <small class="text-muted">(@Model.Email)</small></h5>
            <p class="card-subtitle text-muted">Gửi lúc: @Model.SentDate.ToString("dd/MM/yyyy HH:mm")</p>

            <div class="mt-3 mb-3">
                <strong>Nội dung:</strong>
                <p class="border rounded p-3 bg-light">@Model.Message</p>
            </div>

            <form asp-action="ReplyContact" method="post">
                <input type="hidden" name="email" value="@Model.Email" />
                <div class="mb-3">
                    <label class="form-label">Phản hồi</label>
                    <textarea name="replyMessage" class="form-control" rows="5" required></textarea>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="ContactMessages" class="btn btn-outline-secondary">← Quay lại</a>
                    <button type="submit" class="btn btn-primary">Gửi phản hồi</button>
                </div>
            </form>
        </div>
    </div>
</div>
